<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bariki_othmane.signUpDriverPage2"
    android:background="@drawable/gradiant"
    android:padding="30dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_signUpPage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/back_white"
            android:transitionName="backSignUp"/>

        <TextView
            android:id="@+id/titleSignup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/muli_black"
            android:text="CRÉATION\nDE COMPTE"
            android:textAllCaps="true"
            android:textColor="@color/bluet"
            android:textSize="45sp"
            android:transitionName="titleSignUp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="choisissez votre genre"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/regular"
                />

            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                >

                <RadioButton
                    android:id="@+id/radioButtonF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:buttonTint="@color/bluet"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/radioButtonM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:buttonTint="@color/bluet"

                    android:text="Male" />
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bluet"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choisissez votre âge"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/regular"
                />

            <DatePicker
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_marginBottom="20dp"
                android:calendarTextColor="@color/bluet"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:outlineAmbientShadowColor="@color/white"
                android:outlineSpotShadowColor="@color/bluet"
                android:scrollbarSize="5dp"
                android:spinnersShown="true"
                android:theme="@style/appCompatStyle"
                android:yearListSelectorColor="@color/white" />

            <Button
                android:id="@+id/nextSignUp1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="Suivant"
                android:fontFamily="@font/bold"
                android:layout_marginTop="10dp"
                android:elevation="6dp"
                android:onClick="nextSignUp2"
                android:transitionName="nextSignup1"/>


        </LinearLayout>



    </LinearLayout>

</ScrollView>