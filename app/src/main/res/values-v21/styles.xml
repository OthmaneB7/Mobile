<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>
    </style>



    <style name="editTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="appCompatStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/bluet</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
    </style>
    <style name="navigation">
        <item name="colorPrimary">@color/bluet</item>
        <item name="colorControlHighlight">@color/map_water</item>
    </style>
    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundTint">@color/map_water</item>
    </style>

</resources>